# $ Id: $
# Maintainer: Pierre Schmitz <pierre@archlinux.de>

pkgname=skanlite
pkgver=0.2
_kdever=4.1.0
pkgrel=1
pkgdesc="Image Scanning Application for KDE"
arch=('i686' 'x86_64')
url='http://www.kde.org'
license=('LGPL')
depends=('kdegraphics')
makedepends=('pkgconfig' 'cmake' 'automoc4')
options=('docs')
source=("ftp://ftp.kde.org/pub/kde/stable/${_kdever}/src/extragear/${pkgname}-${pkgver}-kde${_kdever}.tar.bz2")
md5sums=('de1e271e129e75a2614d7c2d844436e8')

build() {
	cd $srcdir
	mkdir build
	cd build
	cmake ../${pkgname}-${pkgver}-kde${_kdever} \
		-DCMAKE_BUILD_TYPE=Release \
		-DCMAKE_INSTALL_PREFIX=/usr
	make
	make DESTDIR=$pkgdir install
}
